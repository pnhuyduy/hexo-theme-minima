<% page.posts.each(function(post){ %>
<div class="row">

  <div class="three columns left lit">
    <p class="bottom"><%- post.date.format("DD-MM-YYYY") %></p>
  </div>
  <div class="nine columns left mb-3">
    <a href="<%- url_for(post.path) %>" >
      <% if (post.title == "") { %>
        Untitled
      <% } else { %>
        <%- post.title %>
      <% } %>
    </a>
  </div>
</div>
<% }) %>

<nav class="post-navigation">
  <% if(page.prev !== 0){ %>
    <a href="<%- url_for(page.prev_link)%>"><%= __('pagination.pre') %></a>
  <% } %>
  <span class="page-num"><%- page.current %> / <%- page.total -%></span>
  <% if(page.next !== 0){ %>
    <a href="<%- url_for(page.next_link)%>"><%= __('pagination.next') %></a>
  <% } %>
</nav>